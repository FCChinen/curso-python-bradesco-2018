    "import numpy as np\n",
    "N = 500\n",
    "div = N * 0.25\n",
    "vetor_aleatorio = np.random.rand(N, 2)\n",
    "vetor_aleatorio -= 0.5\n",
    "contador = 0\n",
    "for obj in vetor_aleatorio:\n",
    "    if (((np.power(obj[0],2)) + (np.power(obj[1],2))) <= 0.25):\n",
    "        contador += 1\n",
    "aprox = contador/div\n",
    "print(str(aprox))"
   ]
